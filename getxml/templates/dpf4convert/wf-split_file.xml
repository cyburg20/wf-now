<?xml version="1.0" encoding="ISO-8859-1"?>
<DPF>
  <config>
    <workflows>
      <split_file
        COMMENT="dpf4convert - PROCESS FOR SPLITTING MULTIPAGE FILES"
        DPFINT-Type="WorkflowDescription"
        NAME="DPF 4 Convert - SubProcess dpf4c_split_file"
        PROJECT="DPF4CONVERT"
        VERSION="$Id: wf-split_file.xml,v 1.6 2016/12/12 10:19:54 kig Exp $"
        >
        <DEFAULTS/>
        <END
          COMMENT=""
          NAME="END"
          POSX="900"
          POSY="200"
          TYPE="STOP"
          />
        <MAIN
          BEGIN="check_dest_format_pdf"
          ERROR="END"
          LOGLEVEL="I"
          />
        <MAPPING/>
        <check_dest_format_pdf
          COMMENT=""
          ELSE="check_dest_format_tif"
          OPERATOR="contains"
          POSX="100"
          POSY="100"
          PROPERTY="DPF4C_COMMON_DEST_FORMAT"
          THEN="check_dest_format_pdf_and_tif"
          TYPE="IF-THEN-ELSE"
          VALUE="pdf"
          >
          <CONNECTIONS
            ELSE="DIRECT"
            THEN="DIRECT"
            />
        </check_dest_format_pdf>
        <check_dest_format_pdf_and_tif
          COMMENT=""
          ELSE="split_pdf_only"
          OPERATOR="contains"
          POSX="300"
          POSY="100"
          PROPERTY="DPF4C_COMMON_DEST_FORMAT"
          THEN="save_currfilename"
          TYPE="IF-THEN-ELSE"
          VALUE="tif"
          >
          <CONNECTIONS
            ELSE="HORIZONTAL"
            THEN="DIRECT"
            />
        </check_dest_format_pdf_and_tif>
        <check_dest_format_tif
          COMMENT=""
          ELSE="END"
          OPERATOR="contains"
          POSX="100"
          POSY="500"
          PROPERTY="DPF4C_COMMON_DEST_FORMAT"
          THEN="split_tiff_only"
          TYPE="IF-THEN-ELSE"
          VALUE="tif"
          >
          <CONNECTIONS
            ELSE="DIRECT"
            THEN="DIRECT"
            />
        </check_dest_format_tif>
        <restore_currfile
          COMMENT=""
          NEXT="split_pdf"
          POSX="900"
          POSY="100"
          TYPE="MODIFY"
          >
          <CONNECTIONS
            NEXT="DIRECT"
            />
          <SET
            CURRFILENAME="%CURRFILENAME_SPLIT_FILE%"
            CURRFILETYPE="%CURRFILETYPE_SPLIT_FILE%"
            />
        </restore_currfile>
        <save_currfilename
          COMMENT=""
          NEXT="split_tiff"
          POSX="500"
          POSY="100"
          TYPE="MODIFY"
          >
          <CONNECTIONS
            NEXT="DIRECT"
            />
          <SET
            CURRFILENAME_SPLIT_FILE="%CURRFILENAME%"
            CURRFILETYPE_SPLIT_FILE="%CURRFILETYPE%"
            />
        </save_currfilename>
        <split_pdf
          COMMENT=""
          ERROR="END"
          NEXT="END"
          POSX="1100"
          POSY="100"
          TYPE="SWF"
          USE="DPF4CONVERT.split_pdf"
          >
          <CONNECTIONS
            ERROR="DIRECT"
            NEXT="DIRECT"
            />
          <DEFAULTS/>
          <MAPPING/>
        </split_pdf>
        <split_pdf_only
          COMMENT=""
          ERROR="END"
          NEXT="END"
          POSX="500"
          POSY="300"
          TYPE="SWF"
          USE="DPF4CONVERT.split_pdf"
          >
          <CONNECTIONS
            ERROR="DIRECT"
            NEXT="DIRECT"
            />
          <DEFAULTS/>
          <MAPPING/>
        </split_pdf_only>
        <split_tiff
          COMMENT=""
          ERROR="END"
          NEXT="restore_currfile"
          POSX="700"
          POSY="100"
          TYPE="SWF"
          USE="DPF4CONVERT.split_tiff"
          >
          <CONNECTIONS
            ERROR="DIRECT"
            NEXT="DIRECT"
            />
          <DEFAULTS/>
          <MAPPING/>
        </split_tiff>
        <split_tiff_only
          COMMENT=""
          ERROR="END"
          NEXT="END"
          POSX="300"
          POSY="500"
          TYPE="SWF"
          USE="DPF4CONVERT.split_tiff"
          >
          <CONNECTIONS
            ERROR="DIRECT"
            NEXT="DIRECT"
            />
          <DEFAULTS/>
          <MAPPING/>
        </split_tiff_only>
      </split_file>
    </workflows>
  </config>
</DPF>
