<?xml version="1.0" encoding="ISO-8859-1"?>
<DPF>
  <config>
    <workingunits>
      <compose_error_mail
        NAME="dpf4c - compose error mail"
        VERSION="$Id: wu-compose_error_mail.xml,v 1.5 2007/06/25 12:39:46 ludwig Exp $"
        PROJECT="DPF4CONVERT"
        TYPE="WUSystemCall"
        LOGNAME="dpf4c-compose_error_mail"
        LOGSTDOUT="Y"
        LOGLEVEL="LOG_INFO"
        THREADS="1"
        COMMAND="%DPFSRV%/scripts/dpf4convert/compose_error_mail.pl -parfile %PARFILENAME%">
        <DEFAULTS
          WU_ENABLE_DEBUG_LOOP="N"
          MAIL_FROM=""
          DPF4C_ERROR_MAIL_ACCOUNT=""
          MAIL_SMTP=""
          DPFTRACKER_AVAILABLE=""
          DPFTRACKER_SERVER=""
          DPFTRACKER_WEB_PORT=""
          CUSTOM_MAIL_BODY_DE="INFO:\nIm Prozess %1 ist an der Position %2 ein Fehler aufgetreten.\nFehlerstatus = %3\n\nTODO:\nBitte kontaktieren Sie Ihren DPF-Administrator unter:\n%4\n\nAuftragsparameter:\nAuftragskennung = %5\nEingabedatei = %6\nAuftrag abgeschickt von %8 auf Rechner %7\n"
          CUSTOM_MAIL_BODY_EN="INFO:\nError occurred in process %1 at position %2\nError state = %3\n\nTODO:\nPlease contact your DPF administrator at:\n%4\n\nJOB INFO:\nJobId = %5\nInput file = %6\nJob created by %8 at host %7\n"
          CUSTOM_MAIL_BODY_SAP_DOCUMENT_DE="Dokument: %1\n" 
          CUSTOM_MAIL_BODY_SAP_DOCUMENT_EN="Document: %1\n"
          CUSTOM_MAIL_BODY_ERR_EXT_CMD_DE="Der Fehler trat auf bei der Ausführung des Kommandos:\n%1\n\n"
          CUSTOM_MAIL_BODY_ERR_EXT_CMD_EN="The error occurred while executing command:\n%1\n\n"
          CUSTOM_MAIL_BODY_ERR_JOB_SAVED_DE="\nDer fehlerhafte Auftrag wurde zur Wiederholung unter der Kennung %1 gespeichert.\n"
          CUSTOM_MAIL_BODY_ERR_JOB_SAVED_EN="\nThe erroneous job has been saved for repetition with ID %1.\n"
          CUSTOM_MAIL_BODY_DPF_TRACKER_URL_JOB_TEXT_DE="\nWeitere Informationen:\n%1\n"
          CUSTOM_MAIL_BODY_DPF_TRACKER_URL_JOB_TEXT_EN="\nFurther Information: \n%1\n"
          CUSTOM_MAIL_BODY_TRACKER_LINK_DE="\nWeitere Informationen:\nhttp://%1:%2/cgi-bin/dpftracker?job=%3\n"
          CUSTOM_MAIL_BODY_TRACKER_LINK_EN="\nFurther Information: \nhttp://%1:%2/cgi-bin/dpftracker?job=%3\n"
          CUSTOM_MAIL_SUBJECT_DE="Fehler in der Verarbeitung von Datei: %1"
          CUSTOM_MAIL_SUBJECT_EN="Error processing file: %1"
          />
        <INPUT
          CUSTOM_MAIL_BODY_EN="text with percent replacements"
          CUSTOM_MAIL_BODY_DE="text with percent replacements"
          CUSTOM_MAIL_BODY_SAP_DOCUMENT_DE="text with percent replacements"
          CUSTOM_MAIL_BODY_SAP_DOCUMENT_EN="text with percent replacements"
          CUSTOM_MAIL_BODY_ERR_EXT_CMD_DE="text with percent replacements"
          CUSTOM_MAIL_BODY_ERR_EXT_CMD_EN="text with percent replacements"
          CUSTOM_MAIL_BODY_ERR_JOB_SAVED_DE="text with percent replacements"
          CUSTOM_MAIL_BODY_ERR_JOB_SAVED_EN="text with percent replacements"
          CUSTOM_MAIL_BODY_DPF_TRACKER_URL_JOB_TEXT_DE="text with percent replacements"
          CUSTOM_MAIL_BODY_DPF_TRACKER_URL_JOB_TEXT_EN="text with percent replacements"
          CUSTOM_MAIL_BODY_TRACKER_LINK_DE="text with percent replacements"
          CUSTOM_MAIL_BODY_TRACKER_LINK_EN="text with percent replacements"
          CUSTOM_MAIL_SUBJECT_DE="text with percent replacements"
          CUSTOM_MAIL_SUBJECT_EN="text with percent replacements"
          />
        <OUTPUT
          />
      </compose_error_mail>
    </workingunits>
  </config>
</DPF>
