<?xml version="1.0" encoding="ISO-8859-1"?>
<DPF>
  <config>
    <workflows>
      <DPF4CONVERT.split_pdf
        COMMENT="dpf4convert - PROCESS FOR SPLITTING MULTIPAGE PDF FILES"
        DPFINT-Customer="0"
        DPFINT-Interactive="0"
        DPFINT-Type="WorkflowDescription"
        NAME="DPF 4 Convert - SubProcess dpf4c_split_pdf"
        PROJECT="DPF4CONVERT"
        VERSION="$Id: wf-split_pdf.xml,v 1.6 2017/02/24 11:35:44 kig Exp $"
        >
        <DEFAULTS/>
        <END
          COMMENT=""
          NAME="END"
          POSX="900"
          POSY="200"
          TYPE="STOP"
          />
        <MAIN
          BEGIN="check_common_outfilepdf"
          ERROR="END"
          LOGLEVEL="I"
          />
        <MAPPING/>
        <check_common_outfilepdf
          COMMENT=""
          ELSE="check_currfiletype"
          OPERATOR="exists"
          POSX="100"
          POSY="100"
          PROPERTY="DPF4C_COMMON_OUTFILEpdf"
          THEN="set_currfilename"
          TYPE="IF-THEN-ELSE"
          VALUE=""
          >
          <CONNECTIONS
            ELSE="DIRECT"
            THEN="DIRECT"
            />
        </check_common_outfilepdf>
        <check_currfiletype
          COMMENT=""
          ELSE="error_not_supported_formatforsplitting"
          OPERATOR="eq"
          POSX="100"
          POSY="300"
          PROPERTY="CURRFILETYPE"
          THEN="pdfsplit"
          TYPE="IF-THEN-ELSE"
          VALUE="pdf"
          >
          <CONNECTIONS
            ELSE="HORIZONTAL"
            THEN="VERTICAL"
            />
        </check_currfiletype>
        <error_not_supported_formatforsplitting
          COMMENT=""
          NEXT="exit_process"
          POSX="300"
          POSY="400"
          TYPE="MODIFY"
          >
          <CONNECTIONS
            NEXT="DIRECT"
            />
          <SET
            ERR_REASON="Error: This CURRFILETYPE -%CURRFILETYPE%- is not supported for splitting!"
            ERR_WFNAME="DPF4C_SPLIT_FILE"
            ERR_WFPOSITION="check_needed_split"
            />
        </error_not_supported_formatforsplitting>
        <exit_process
          COMMENT=""
          ERROR="END"
          NAME="exit_process"
          NEXT="END"
          POSX="500"
          POSY="400"
          TYPE="WU"
          >
          <CONNECTIONS
            ERROR="DIRECT"
            NEXT="DIRECT"
            />
          <DEFAULTS/>
          <MAPPING/>
        </exit_process>
        <pdfsplit
          COMMENT=""
          ERROR="END"
          NAME="pdfsplit"
          NEXT="END"
          POSX="500"
          POSY="100"
          TYPE="WU"
          >
          <CONNECTIONS
            ERROR="DIRECT"
            NEXT="DIRECT"
            />
          <DEFAULTS/>
          <MAPPING/>
        </pdfsplit>
        <set_currfilename
          COMMENT=""
          NEXT="pdfsplit"
          POSX="300"
          POSY="100"
          TYPE="MODIFY"
          >
          <CONNECTIONS
            NEXT="DIRECT"
            />
          <SET
            CURRFILENAME="%DPF4C_COMMON_OUTFILEpdf%"
            />
        </set_currfilename>
      </DPF4CONVERT.split_pdf>
    </workflows>
  </config>
</DPF>
