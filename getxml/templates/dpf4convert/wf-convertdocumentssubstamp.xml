<?xml version="1.0" encoding="ISO-8859-1"?>
<DPF>
  <config>
    <workflows>
      <DPF4CONVERT.Convertdocumentssubstamp
        COMMENT=""
        DPFINT-Type="WorkflowDescription"
        NAME="Convertdocumentssubstamp"
        PROJECT="DPF4CONVERT"
        VERSION="$Id: wf-convertdocumentssubstamp.xml,v 1.2 2009/12/17 16:22:42 dh Exp $"
        >
        <DEFAULTS/>
        <DPF4CONVERT.mapshortstampvalues
          COMMENT=""
          ERROR="END"
          NAME="DPF4CONVERT.mapshortstampvalues"
          NEXT="pdfstampCOPY"
          POSX="700"
          POSY="900"
          TYPE="WU"
          >
          <CONNECTIONS
            ERROR="DIRECT"
            NEXT="DIRECT"
            />
          <DEFAULTS/>
          <MAPPING/>
        </DPF4CONVERT.mapshortstampvalues>
        <DPF4CONVERT.readstampvalues
          COMMENT=""
          ERROR="END"
          NAME="DPF4CONVERT.readstampvalues"
          NEXT="set_stamp_flags"
          POSX="700"
          POSY="500"
          TYPE="WU"
          >
          <CONNECTIONS
            ERROR="DIRECT"
            NEXT="DIRECT"
            />
          <DEFAULTS/>
          <MAPPING/>
        </DPF4CONVERT.readstampvalues>
        <END
          COMMENT=""
          NAME="END"
          POSX="500"
          POSY="1200"
          TYPE="STOP"
          />
        <MAIN
          BEGIN="check_for_stamp"
          NAME=""
          />
        <MAPPING/>
        <check_for_stamp
          COMMENT=""
          ELSE="END"
          OPERATOR="is true"
          POSX="500"
          POSY="300"
          PROPERTY="WANT_STAMP"
          THEN="DPF4CONVERT.readstampvalues"
          TYPE="IF-THEN-ELSE"
          VALUE=""
          >
          <CONNECTIONS
            ELSE="DIRECT"
            THEN="DIRECT"
            />
        </check_for_stamp>
        <pdfstampCOPY
          COMMENT=""
          ERROR="END"
          NAME="pdfstamp"
          NEXT="END"
          POSX="700"
          POSY="1100"
          TYPE="WU"
          >
          <CONNECTIONS
            ERROR="DIRECT"
            NEXT="DIRECT"
            />
          <DEFAULTS/>
          <MAPPING/>
        </pdfstampCOPY>
        <set_stamp_flags
          COMMENT=""
          NEXT="DPF4CONVERT.mapshortstampvalues"
          POSX="700"
          POSY="700"
          TYPE="MODIFY"
          >
          <CONNECTIONS
            NEXT="DIRECT"
            />
          <SET
            DPF4C_MODIFY_STAMP="Y"
            DPF4C_PDFSTAMP_STP_FILE="%STAMPFILE%"
            DPF4C_SWITCH_MODIFY="Y"
            />
        </set_stamp_flags>
      </DPF4CONVERT.Convertdocumentssubstamp>
    </workflows>
  </config>
</DPF>
