<?xml version="1.0" encoding="ISO-8859-1"?>
<DPF>
  <config>
    <workflows>
      <DPF4CONVERT.netconv_check_abort
        COMMENT=""
        DPFINT-Customer="0"
        DPFINT-Interactive="0"
        DPFINT-Type="WorkflowDescription"
        NAME="Netconv Check Abort"
        PROJECT="DPF4CONVERT"
        VERSION="$Id: wf-netconv_check_abort.xml,v 1.1 2016/03/18 10:18:50 kig Exp $"
        >
        <DEFAULTS/>
        <END
          COMMENT=""
          NAME="END"
          POSX="200"
          POSY="100"
          TYPE="STOP"
          />
        <MAIN
          BEGIN="get_comma_list"
          NAME=""
          />
        <MAPPING/>
        <check_filetype_abort
          COMMENT=""
          ELSE="END"
          OPERATOR="contains"
          POSX="400"
          POSY="100"
          PROPERTY="DPF4C_NETCONV_TMP_ABORT_LIST"
          THEN="error_aborted_currfiletype"
          TYPE="IF-THEN-ELSE"
          VALUE="%DPF4C_NETCONV_TMP_ABORT_TYPE%"
          >
          <CONNECTIONS
            ELSE="DIRECT"
            THEN="DIRECT"
            />
        </check_filetype_abort>
        <error_aborted_currfiletype
          COMMENT=""
          NEXT="exit_process"
          POSX="600"
          POSY="100"
          TYPE="MODIFY"
          >
          <CONNECTIONS
            NEXT="DIRECT"
            />
          <SET
            ERR_REASON="Error: Job aborted because CURRFILETYPE -%CURRFILETYPE%- is contained in list DPF4C_NETCONV_FILETYPES_ABORT=%DPF4C_NETCONV_FILETYPES_ABORT%"
            ERR_WFNAME="NETCONV_CHECK_ABORT"
            ERR_WFPOSITION="check_filetypes_abort"
            />
        </error_aborted_currfiletype>
        <exit_process
          COMMENT=""
          ERROR="END"
          NAME="exit_process"
          NEXT="END"
          POSX="800"
          POSY="100"
          TYPE="WU"
          >
          <CONNECTIONS
            ERROR="DIRECT"
            NEXT="DIRECT"
            />
          <DEFAULTS/>
          <MAPPING/>
        </exit_process>
        <get_comma_list
          COMMENT=""
          NEXT="check_filetype_abort"
          POSX="200"
          POSY="100"
          TYPE="MODIFY"
          >
          <CONNECTIONS
            NEXT="DIRECT"
            />
          <SET
            DPF4C_NETCONV_TMP_ABORT_LIST=",%DPF4C_NETCONV_FILETYPES_ABORT%,"
            DPF4C_NETCONV_TMP_ABORT_TYPE=",%CURRFILETYPE%,"
            />
        </get_comma_list>
      </DPF4CONVERT.netconv_check_abort>
    </workflows>
  </config>
</DPF>
