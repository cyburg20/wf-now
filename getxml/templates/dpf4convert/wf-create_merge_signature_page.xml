<?xml version="1.0" encoding="ISO-8859-1"?>
<DPF>
  <config>
    <workflows>
      <create_merge_signature_page
        COMMENT="dpf4convert - PROCESS FOR INSERT OF PDF SIGNATURE PAGE"
        DPFINT-Type="WorkflowDescription"
        NAME="DPF 4 Convert - Process create_merge_signature_page"
        PROJECT="DPF4CONVERT"
        VERSION="$Id: wf-create_merge_signature_page.xml,v 1.3 2012/11/15 08:36:29 kig Exp $"
        >
        <DEFAULTS/>
        <END
          COMMENT=""
          NAME="END"
          POSX="500"
          POSY="200"
          TYPE="STOP"
          />
        <MAIN
          BEGIN="check_if_input_format_equals_pdf"
          ERROR="END"
          LOGLEVEL="I"
          />
        <MAPPING/>
        <check_if_input_format_equals_pdf
          COMMENT=""
          ELSE="error_filetype_not_supported_for_signature_page"
          OPERATOR="eq"
          POSX="300"
          POSY="100"
          PROPERTY="CURRFILETYPE"
          THEN="create_merge_signature_page"
          TYPE="IF-THEN-ELSE"
          VALUE="pdf"
          >
          <CONNECTIONS
            ELSE="DIRECT"
            THEN="DIRECT"
            />
        </check_if_input_format_equals_pdf>
        <create_merge_signature_page
          COMMENT=""
          ERROR="END"
          NAME="create_merge_signature_page"
          NEXT="END"
          POSX="300"
          POSY="300"
          TYPE="WU"
          >
          <CONNECTIONS
            ERROR="DIRECT"
            NEXT="DIRECT"
            />
          <DEFAULTS
           SubProcess="pdfmerge_cp"
           />
          <MAPPING/>
        </create_merge_signature_page>
        <error_filetype_not_supported_for_signature_page
          COMMENT=""
          NEXT="exit_process"
          POSX="500"
          POSY="100"
          TYPE="MODIFY"
          >
          <CONNECTIONS
            NEXT="DIRECT"
            />
          <SET
            ERR_REASON="Error: This CURRFILETYPE -%CURRFILETYPE%- is not supported for using a signature page!"
            ERR_WFNAME="create_merge_signature_page"
            ERR_WFPOSITION="error_filetype_not_supported_for_signature_page"
            />
        </error_filetype_not_supported_for_signature_page>
        <exit_process
          COMMENT=""
          ERROR="END"
          NAME="exit_process"
          NEXT="END"
          POSX="500"
          POSY="300"
          TYPE="WU"
          >
          <CONNECTIONS
            ERROR="DIRECT"
            NEXT="DIRECT"
            />
          <DEFAULTS/>
          <MAPPING/>
        </exit_process>
      </create_merge_signature_page>
    </workflows>
  </config>
</DPF>
