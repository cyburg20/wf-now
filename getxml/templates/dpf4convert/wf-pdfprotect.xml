<?xml version="1.0" encoding="ISO-8859-1"?>
<DPF>
  <config>
    <workflows>
      <DPF4CONVERT.pdfprotect
        COMMENT=""
        DPFINT-Customer="0"
        DPFINT-Interactive="0"
        DPFINT-Type="WorkflowDescription"
        NAME="Pdfprotect - Set protections on a PDF file"
        PROJECT="DPF4CONVERT"
        VERSION="$Id: wf-pdfprotect.xml,v 1.2 2012/12/07 15:58:43 kig Exp $"
        >
        <DEFAULTS/>
        <END
          COMMENT=""
          NAME="END"
          POSX="900"
          POSY="300"
          TYPE="STOP"
          />
        <MAIN
          BEGIN="check_enable_pdfprotect"
          NAME=""
          />
        <MAPPING/>
        <alcdrm
          COMMENT=""
          ERROR="END"
          NAME="alcdrm"
          NEXT="END"
          POSX="700"
          POSY="400"
          TYPE="WU"
          >
          <CONNECTIONS
            ERROR="DIRECT"
            NEXT="DIRECT"
            />
          <DEFAULTS/>
          <MAPPING/>
        </alcdrm>
        <check_enable_pdfprotect
          COMMENT=""
          ELSE="END"
          OPERATOR="eq"
          POSX="400"
          POSY="100"
          PROPERTY="ENABLE_PDFPROTECT"
          THEN="check_protect_type"
          TYPE="IF-THEN-ELSE"
          VALUE="Y"
          >
          <CONNECTIONS
            ELSE="DIRECT"
            THEN="DIRECT"
            />
        </check_enable_pdfprotect>
        <check_protect_type
          CASE:DRM="alcdrm"
          CASE:PASSWORD="pdfprotect"
          COMMENT=""
          CONNECTION:DEFAULT="DIRECT"
          CONNECTION:DRM="VERTICAL"
          CONNECTION:PASSWORD="DIRECT"
          DEFAULT="pdfprotect"
          POSX="500"
          POSY="200"
          PROPERTY="PDFPROTECT_TYPE"
          TYPE="SWITCH"
          />
        <pdfprotect
          COMMENT=""
          ERROR="END"
          NAME="DPF4CONVERT.pdfprotect"
          NEXT="END"
          POSX="500"
          POSY="400"
          TYPE="WU"
          >
          <CONNECTIONS
            ERROR="DIRECT"
            NEXT="DIRECT"
            />
          <DEFAULTS/>
          <MAPPING/>
        </pdfprotect>
      </DPF4CONVERT.pdfprotect>
    </workflows>
  </config>
</DPF>
