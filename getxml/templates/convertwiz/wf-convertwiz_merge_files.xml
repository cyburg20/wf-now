<?xml version="1.0" encoding="ISO-8859-1"?>
<DPF>
  <config>
    <workflows>
      <convertwiz_merge_files
        COMMENT="convertwiz - Merge pdf or tif files together"
        DPFINT-Interactive="0"
        DPFINT-Type="WorkflowDescription"
        NAME="CONVERTWIZ - convertwiz_merge_files"
        PROJECT="CONVERTWIZ"
        VERSION="$Id: wf-convertwiz_merge_files.xml,v 1.5 2007/11/26 15:16:28 dh Exp $"
        >
        <DEFAULTS/>
        <END
          COMMENT=""
          NAME="END"
          POSX="700"
          POSY="200"
          TYPE="STOP"
          />
        <MAIN
          BEGIN="check_for_files_to_merge"
          ERROR="END"
          />
        <check_for_files_to_merge
          COMMENT=""
          ELSE="END"
          OPERATOR="exists"
          POSX="100"
          POSY="200"
          PROPERTY="CURRASSOCFILENAME1"
          THEN="check_for_pdf_for_merge"
          TYPE="IF-THEN-ELSE"
          VALUE=""
          >
          <CONNECTIONS
            ELSE="DIRECT"
            THEN="DIRECT"
            />
        </check_for_files_to_merge>
        <check_for_pdf_for_merge
          COMMENT=""
          ELSE="check_for_tif_for_merge"
          OPERATOR="contains"
          POSX="300"
          POSY="200"
          PROPERTY="CURRFILETYPE"
          THEN="pdfmerge"
          TYPE="IF-THEN-ELSE"
          VALUE="pdf"
          >
          <CONNECTIONS
            ELSE="DIRECT"
            THEN="DIRECT"
            />
        </check_for_pdf_for_merge>
        <check_for_tif_for_merge
          COMMENT=""
          ELSE="END"
          OPERATOR="contains"
          POSX="300"
          POSY="400"
          PROPERTY="CURRFILETYPE"
          THEN="tiffmerge"
          TYPE="IF-THEN-ELSE"
          VALUE="tif"
          >
          <CONNECTIONS
            ELSE="DIRECT"
            THEN="DIRECT"
            />
        </check_for_tif_for_merge>
        <pdfmerge
          COMMENT=""
          ERROR="END"
          NEXT="END"
          POSX="500"
          POSY="200"
          TYPE="SWF"
          USE="pdfmerge"
          >
          <CONNECTIONS
            ERROR="DIRECT"
            NEXT="DIRECT"
            />
          <DEFAULTS/>
          <MAPPING/>
        </pdfmerge>
        <tiffmerge
          COMMENT=""
          ERROR="END"
          NAME="tiffmerge"
          NEXT="END"
          POSX="500"
          POSY="400"
          TYPE="WU"
          >
          <CONNECTIONS
            ERROR="DIRECT"
            NEXT="DIRECT"
            />
          <DEFAULTS/>
          <MAPPING/>
        </tiffmerge>
      </convertwiz_merge_files>
    </workflows>
  </config>
</DPF>
