<?xml version="1.0" encoding="ISO-8859-1"?>
<DPF>
  <config>
    <workflows>
      <Test.testLoop
        COMMENT=""
        DPFINT-Interactive="0"
        DPFINT-Type="WorkflowDescription"
        NAME="Test Loop"
        PROJECT="Test"
        VERSION="$Id: wf-testloop.xml,v 1.1 2007/11/05 10:48:30 rg Exp $"
        >
        <DEFAULTS
          MaxLoops="100"
          />
        <IfAllFoldersCOPY5
          COMMENT=""
          ELSE="showDoneMessageCOPY1"
          OPERATOR="le"
          POSX="500"
          POSY="400"
          PROPERTY="WUCOUNTER"
          THEN="showMessageCOPY4"
          TYPE="IF-THEN-ELSE"
          VALUE="%MaxLoops%"
          >
          <CONNECTIONS
            ELSE="VERTICAL"
            THEN="VERTICAL"
            />
        </IfAllFoldersCOPY5>
        <MAIN
          BEGIN="setFirstFolderCOPY2"
          NAME=""
          />
        <Test.exit01
          COMMENT=""
          ERROR="END"
          NAME="Test.exit0"
          NEXT="IfAllFoldersCOPY5"
          POSX="200"
          POSY="600"
          TYPE="WU"
          >
          <CONNECTIONS
            NEXT="HORIZONTAL"
            />
          <DEFAULTS/>
          <MAPPING/>
        </Test.exit01>
        <setFirstFolderCOPY2
          COMMENT=""
          NEXT="IfAllFoldersCOPY5"
          POSX="500"
          POSY="200"
          TYPE="MODIFY"
          >
          <CONNECTIONS
            NEXT="VERTICAL"
            />
          <SET
            WUCOUNTER="1"
            />
        </setFirstFolderCOPY2>
        <showDoneMessageCOPY1
          COMMENT=""
          NEXT="END"
          POSX="800"
          POSY="600"
          TYPE="MODIFY"
          >
          <SET
            DPF_JOB_MESSAGE="Yes, finished"
            />
        </showDoneMessageCOPY1>
        <showMessageCOPY4
          COMMENT=""
          NEXT="Test.exit01"
          POSX="500"
          POSY="600"
          TYPE="MODIFY"
          >
          <CONNECTIONS
            NEXT="VERTICAL"
            />
          <SET
            DPF_JOB_MESSAGE="Counter %WUCOUNTER%"
            />
        </showMessageCOPY4>
      </Test.testLoop>
    </workflows>
  </config>
</DPF>
