<?xml version="1.0" encoding="ISO-8859-1"?>
<DPF>
  <config>
    <workflows>
      <CdRobot.prepareCdContents
        COMMENT="add additional files to CD contents in case of a tar"
        DPFINT-Icon="doc://:/wf.gif"
        DPFINT-Type="WorkflowDescription"
        INTERNALNAME="CdRobot.prepareCdContents"
        NAME="Prepare CD Contents"
        PROJECT="CdRobot"
        VERSION="$Id: wf-preparecdcontents.xml,v 1.5 2006/12/18 08:43:35 stefan Exp $"
        >
        <DEFAULTS
          DPFINT-Icon="doc://:/defaults.gif"
          />
        <END
          COMMENT=""
          NAME="END"
          POSX="400"
          POSY="500"
          TYPE="STOP"
          />
        <MAIN
          BEGIN="changeRootDir"
          NAME=""
          />
        <MAPPING/>
        <changeRootDir
          COMMENT=""
          NEXT="createDir"
          POSX="200"
          POSY="100"
          TYPE="MODIFY"
          >
          <CONNECTIONS
            NEXT="DIRECT"
            />
          <SET
            ROOTDIR="%JOBDIR%\cdout"
            />
        </changeRootDir>
        <copyCdTemplate
          COMMENT=""
          ERROR="END"
          NAME="FileTransfer.xcopyDir"
          NEXT="END"
          POSX="200"
          POSY="500"
          TYPE="WU"
          >
          <DEFAULTS/>
          <MAPPING
             SOURCEDIR="%DPFSRV%\conf\CdRobot\CD"
             TARGETDIR="%ROOTDIR%"
             />
        </copyCdTemplate>
        <createDir
          COMMENT=""
          ERROR="END"
          NAME="FileSystem.mkPath"
          NEXT="copyCdTemplate"
          POSX="200"
          POSY="300"
          TYPE="WU"
          >
          <CONNECTIONS
            ERROR="DIRECT"
            NEXT="DIRECT"
            />
          <DEFAULTS/>
          <MAPPING
            DIRECTORY="%ROOTDIR%"
            />
        </createDir>
      </CdRobot.prepareCdContents>
    </workflows>
  </config>
</DPF>
