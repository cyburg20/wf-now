<?xml version="1.0" encoding="ISO-8859-1"?>
<DPF>
  <config>
    <workingunits>
      <Nutch.DoCrawl
        COMMAND="%DPFSRV%/scripts/nutch/docrawl.pl -parfile %PARFILENAME%"
        DEFAULTS=""
        DPFINT-Icon="doc://:/wu.gif"
        DPFINT-Type="StationDescription"
        IGNOREEXITCODE="Y"
        LOGLEVEL="LOG_INFO"
        LOGSTDOUT="Y"
        NAME="DoCrawl"
        PROJECT="Nutch"
        Status="Running"
        THREADS="1"
        TYPE="WUSystemCall"
        VERSION="$Id: wu-docrawl.xml,v 1.3 2007/09/14 05:34:36 tobias Exp $"
        >
        <DEFAULTS/>
        <INPUT>
          <CRAWLDIR
            DESCRIPTION="directory for output (def. is JOBDIR\crawl)"
            TYPE="TEXT"
            />
          <CURRFILENAME
            DESCRIPTION="the input file"
            TYPE="TEXT"
            />
          <DEPTH
            DESCRIPTION="crawl depth"
            TYPE="TEXT"
            />
          <JOBDIR
            DESCRIPTION="our job dir for temp files"
            TYPE="TEXT"
            />
          <NUTCH_CONF_PATH
            DESCRIPTION="path w/ configuration dirs"
            TYPE="TEXT"
            />
          <NUTCH_HOME
            DESCRIPTION="home dir of your nutch installation"
            TYPE="TEXT"
            />
          <NUTCH_LOGFILE
            DESCRIPTION="The name of the Log file"
            TYPE="TEXT"
            />
          <NUTCH_LOG_DIR
            DESCRIPTION="Directory for this crawl&apos;s log file"
            TYPE="TEXT"
            />
          <POLL_PAUSE
            DESCRIPTION="# seconds for sleep in Reporter Thread"
            TYPE="TEXT"
            />
          <SEEDDIR
            DESCRIPTION="dir w/ flat files as url seeds"
            TYPE="TEXT"
            />
          <TOPN
            DESCRIPTION="number of hits to evaluate per crawl node"
            TYPE="TEXT"
            />
        </INPUT>
      </Nutch.DoCrawl>
    </workingunits>
  </config>
</DPF>
