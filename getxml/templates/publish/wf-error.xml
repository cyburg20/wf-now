<?xml version="1.0" encoding="ISO-8859-1"?>
<DPF>
  <config>
    <workflows>
      <Publish.error
        COMMENT="Publish error workflow "
        DPFINT-Icon="doc://:/wf.gif"
        DPFINT-Type="WorkflowDescription"
        NAME="error"
        PROJECT="Publish"
        VERSION="$Id: wf-error.xml,v 1.5 2009/08/13 09:52:24 sek Exp $"
        >
        <DEFAULTS
          DPFINT-Icon="doc://:/defaults.gif"
          />
        <END
          COMMENT=""
          NAME="END"
          POSX="600"
          POSY="700"
          TYPE="STOP"
          />
        <IfMail
          COMMENT=""
          ELSE="END"
          OPERATOR="eq"
          POSX="400"
          POSY="300"
          PROPERTY="SENDMAIL"
          THEN="sendmail"
          TYPE="IF-THEN-ELSE"
          VALUE="Y"
          >
          <CONNECTIONS
            ELSE="DIRECT"
            THEN="DIRECT"
            />
        </IfMail>
        <MAIN
          BEGIN="SwitchActionCode"
          ERROR="END"
          />
        <MAPPING/>
        <SwitchActionCode
          CASE:C="IfMail"
          CASE:P="IfMail"
          CASE:Z="IfMail"
          CASE:off2="errorCompressingJob"
          CASE:off3="errorConvertingJob"
          CASE:off="errorPrintingJob"
          COMMENT=""
          CONNECTION:C="DIRECT"
          CONNECTION:DEFAULT="DIRECT"
          CONNECTION:P="DIRECT"
          CONNECTION:Z="DIRECT"
          CONNECTION:off2="DIRECT"
          CONNECTION:off3="DIRECT"
          CONNECTION:off="DIRECT"
          DEFAULT="cleanup"
          POSX="0"
          POSY="300"
          PROPERTY="ACTIONCODE"
          TYPE="SWITCH"
          />
        <cleanup
          COMMENT=""
          ERROR="END"
          NEXT="END"
          POSX="400"
          POSY="700"
          TYPE="SWF"
          USE="Publish.cleanup"
          >
          <CONNECTIONS
            ERROR="DIRECT"
            NEXT="DIRECT"
            />
          <DEFAULTS/>
          <MAPPING/>
        </cleanup>
        <errorCompressingJob
          COMMENT=""
          NEXT="IfMail"
          POSX="200"
          POSY="200"
          TYPE="MODIFY"
          >
          <CONNECTIONS
            NEXT="DIRECT"
            />
          <SET
            MAIL_SUBJECT="Error compressing job %JOBNAME%"
            MAIL_TEXT="One or more of your documents could not be processed\nError message is: %ERR_REASON%\n -please check summary file-\nJob-ID is: %JOBID%\n\n"
            />
        </errorCompressingJob>
        <errorConvertingJob
          COMMENT=""
          NEXT="IfMail"
          POSX="200"
          POSY="400"
          TYPE="MODIFY"
          >
          <CONNECTIONS
            NEXT="DIRECT"
            />
          <SET
            MAIL_SUBJECT="Error converting job %JOBNAME%"
            MAIL_TEXT="One or more of your documents could not be converted\nError message is: %ERR_REASON%\n -please check summary file-\nJob-ID is: %JOBID%\n\n"
            />
        </errorConvertingJob>
        <errorPrintingJob
          COMMENT=""
          NEXT="IfMail"
          POSX="200"
          POSY="0"
          TYPE="MODIFY"
          >
          <CONNECTIONS
            NEXT="DIRECT"
            />
          <SET
            MAIL_SUBJECT="Error printing job %JOBNAME%"
            MAIL_TEXT="One or more of your documents could not be printed\nError message is: %ERR_REASON%\n -please check summary file-\nJob-ID is: %JOBID%\n\n"
            />
        </errorPrintingJob>
        <sendmail
          COMMENT=""
          ERROR="cleanup"
          NAME="Mail.sendMail"
          NEXT="cleanup"
          POSX="400"
          POSY="500"
          TYPE="WU"
          >
          <CONNECTIONS
            ERROR="DIRECT"
            NEXT="DIRECT"
            />
          <DEFAULTS
            MAIL_EXPAND_TEXT="N"
            MAIL_FROM="cFolder@Publish.com"
            MAIL_SMTP="sealsystems.de"
            MAIL_SUBJECT="Error in cFolder conversion %JOBNUMBER%"
            NAME=""
            >
            <WU_ENABLE_DEBUG_LOOP
              val="N"
              />
          </DEFAULTS>
          <MAPPING
            MAIL_ATTACH_PROPERTIES="SUMMARYFILE"
            />
        </sendmail>
      </Publish.error>
    </workflows>
  </config>
</DPF>
