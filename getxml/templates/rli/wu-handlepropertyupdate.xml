<?xml version="1.0" encoding="ISO-8859-1"?>
<DPF>
  <config>
    <workingunits>
      <Rli.HandlePropertyUpdate
        CODEPAGE="ISO-8859-1"
        COMMAND="%DPFSRV%/scripts/rli/handlepropertyupdate.pl -parfile %PARFILENAME%"
        DPFINT-Icon="doc://:/wu.gif"
        DPFINT-Type="StationDescription"
        IGNOREEXITCODE="N"
        LOGLEVEL="LOG_INFO"
        LOGNAME=""
        LOGSTDOUT="Y"
        NAME="Handle Property Update"
        NODENAMES=""
        PROJECT="Rli"
        THREADS="1"
        TIMEOUT=""
        TYPE="WUSystemCall"
        VERSION="$Id: wu-handlepropertyupdate.xml,v 1.3 2013/08/14 15:53:37 sek Exp $"
        >
        <DEFAULTS
          RlicCurrFileName="CurrFileName"
          WuEnableDebugLoop="N"
          />
        <INPUT>
          <CurrRliFileName
            DESCRIPTION="the input rli-file"
            MANDATORY="true"
            TYPE="TEXT"
            />
          <DestFileName
            DESCRIPTION="the target rli-file"
            TYPE="TEXT"
            />
          <FilterOperator
            DESCRIPTION="optional operator to compare value(s), default: eq"
            TYPE="TEXT"
            />
          <FilterOperator2
            DESCRIPTION="second optional operator to compare value(s), default: eq"
            TYPE="TEXT"
            />
          <FilterPrefix
            DESCRIPTION="rlifilter prefix, if none was passed to the rlifilter object. if a prefix was defined either way, it must be inserted before rlifilter property names: &lt;Prefix&gt;RlicFilter"
            TYPE="TEXT"
            />
          <FilterValue
            DESCRIPTION="value to search for in filter"
            TYPE="TEXT"
            />
          <FilterValue2
            DESCRIPTION="second set of colon separated values to work on these specific RLI lines only"
            TYPE="TEXT"
            />
          <RlicCurrFileName
            DEFAULT="CurrFileName"
            DESCRIPTION="name of the RLI column to get ini file basenames from"
            TYPE="TEXT"
            />
          <RlicFilter
            DESCRIPTION="name of RLI column for filter"
            TYPE="TEXT"
            />
          <RlicFilter2
            DESCRIPTION="name of second RLI column to use to filter specific RLI lines only"
            TYPE="TEXT"
            />
          <WuEnableDebugLoop
            DEFAULT="N"
            TYPE="CHECK"
            >
            <RANGE
              VALUE1="false=N"
              VALUE2="true=Y"
              />
          </WuEnableDebugLoop>
        </INPUT>
        <OUTPUT/>
      </Rli.HandlePropertyUpdate>
    </workingunits>
  </config>
</DPF>
